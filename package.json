{
  "name": "frappe-scripting-helper",
  "displayName": "Frappe Scripting Helper",
  "description": "Auto-completion, snippets, and IntelliSense for Frappe Framework v15 client-side scripting",
  "version": "1.0.0",
  "publisher": "muhammedshibilm",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "frappe",
    "erpnext",
    "javascript",
    "typescript",
    "snippets",
    "intellisense",
    "autocomplete",
    "v15",
    "client-side"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/muhammedshibilm/frappe-scripting-helper"
  },
  "bugs": {
    "url": "https://github.com/muhammedshibilm/frappe-scripting-helper/issues"
  },
  "homepage": "https://github.com/muhammedshibilm/frappe-scripting-helper#readme",
  "license": "MIT",
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "icon": "images/icon.png",
  "contributes": {
    "configuration": {
      "title": "Frappe Scripting Helper",
      "properties": {
        "frappeScriptingHelper.showWelcomeMessage": {
          "type": "boolean",
          "default": true,
          "description": "Show welcome message when extension is activated"
        }
      }
    },
    "commands": [
      {
        "command": "frappe-scripting-helper.showDocumentation",
        "title": "Open Frappe v15 Documentation",
        "category": "Frappe Scripting Helper"
      }
    ],
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/frappe-snippets.code-snippets"
      },
      {
        "language": "typescript",
        "path": "./snippets/frappe-snippets.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}